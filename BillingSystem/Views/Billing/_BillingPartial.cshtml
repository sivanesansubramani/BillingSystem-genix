@model BillingSystem.Models.BillingAddressess

@{
    ViewData["Title"] = "View";
}


<h4>BillingAddressess</h4>
<div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <label asp-for="Name" class="control-label"></label><span asp-validation-for="Name" class="text-danger">*</span>

            <input asp-for="Name" class="form-control" required placeholder="Enter Name" style="width:300px;height:50px;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 4px;font-size: 16px;">

            </div>
            <div class="form-group">
            <label asp-for="Address" class="control-label"></label></label><span asp-validation-for="Address" class="text-danger" id="requiredLabel">*Required </span>

            <input asp-for="Address" class="form-control" required placeholder="Address 1" style="width:300px;height:50px;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 4px;font-size: 16px;" />

            </div>
            <div class="form-group">
@*                 <label asp-for="Address2" class="control-label"></label>
            *@            <input asp-for="Address2" class="form-control" required placeholder="Address 2" style="width:300px;height:50px;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 4px;font-size: 16px;" />
            <span asp-validation-for="Address2" class="text-danger"></span>



            </div>

        <div class="form-group" required>
@*                 <label asp-for="City" class="control-label"></label>
*@
            <span class="required"></span>
            <select id="City" name="City" class="form-control" required style="width:300px;height:50px;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 15px;font-size: 16px;">
                    <option value='0'>Select city</option>
                    <option value='1'>Chennai</option>
                    <option value='2'>Coimbatore</option>
                    <option value='3'>Karur</option>
                    <option value='4'>Palani</option>
                    <option value='5'>Madurai</option>
                 
                </select>
                <div id='result'></div>     
            </div>
        <div class="form-group" required>
@*                 <label asp-for="State" class="control-label"></label>

            *@            <span class="required"></span>
            <select id='selUser' class="form-control" required style="width:300px;height:50px;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 4px;font-size: 16px;">
                    <option value='0'>Select State</option>
                    <option value='1'>TamilNadu</option>
                    <option value='2'>Kerala</option>
                    <option value='3'>Karnataka</option>
                  
                </select>
                <div id='result'></div>
             
            </div>
            <div class="form-group">
            <label asp-for="ContactNo" class="control-label"></label><span asp-validation-for="ContactNo" class="text-danger">* </span>

            <input asp-for="ContactNo" class="form-control" required placeholder="Enter Phone Number" style="width:300px;height:50px;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 4px;font-size: 16px;" />
            </div>
          
            
    </div>
</div>



<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {

        $("#Address").on("input", function () {

            if ($(this).is(":valid")) {

                $("#requiredLabel").hide();
            } else {

                $("#requiredLabel").show();
            }
        });
    });
</script>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
